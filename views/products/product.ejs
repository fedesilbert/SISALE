<%- include('../partials/header') %>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Pc Works</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <h2><a class="nav-item nav-link" href="/">Home</a></h2>
          <% if (locals.user) { %>
            <h2><a class="nav-item nav-link" href="/<%= user.id %>/profile">Perfil</a></h2>
          <% } else { %>
            <h2><a class="nav-item nav-link" href="/login">Perfil</a></h2>
          <% } %>
          

        </div>
      </div>
    </nav>


    <% for (const product of productos) { %>
      <div class="card mb-3">
        <div class="row g-0">
         
          <div class="col-md-4">
            <a href="/routeProd/<%= product.id %>/detail"><img class="imagenprod" src="<%= product.imagen %>" alt=""
                width="200px" /></a>
          </div>
          <div class="col-md-8">
            <div class="card-body p-3">
              <h5 class="card-title">
                <%= product.nombre %>
              </h5>
              <p class="card-text"><%=product.descripcion %></p>
              <a href="/<%= product.id %>/detail" class="btn btn-primary">Ir al detalle</a>
              <p class="card-text"><small class="text-muted">Publicado por <%= product.producto_usuario.nombreusuario%> </small></p>
              <div class="panel-heading">Deja tu comentario!</div>
              <div class="panel-body">
                <form method="post">
                  <div class="form-group">
                  </div>
                  <div class="form-group">
                    
                    <textarea name="subject" class="form-control" rows="3"></textarea>
                  </div>
                  <a href="/<%= product.id %>/detail" class="btn btn-primary">Comentar</a>
                </form>
              </div>
            </div>




          </div>
        </div>
      </div>
      </div>
      <% } %>
        <%- include('../partials/footer') %>>