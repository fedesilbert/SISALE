<%- include('../partials/header') %>
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <% if (producto.length==0) {%> <h2 class="products-title">No hay resultados para su criterio de búsqueda</h2>
           <% } %> <h2 class="products-title">Resultados de búsqueda</h2>
        </div>
 
        <% for (let i=0; i < producto.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/<%= producto[i].id%>/detail">
                            <figure class="product-box_image">
                            <img class="imagen-producto" src="/images/products/<%= producto[i].imagen%>" width="100%">
                        </figure>
                        <article class="product-box_data">
                            <h2 class="sacarhipervinculo">
                                <%= producto[i].nombre %> 
                            </h2  class="sacarhipervinculo">
                            <p>
                                <%=  producto[i].descripcion %> 
                            </p>
                        </article>
                    </a>
                </section>
            </div>
            <% } %>
        </div>
    </div>
<%- include('../partials/footer') %>
